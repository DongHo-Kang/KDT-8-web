<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <h1><%= data.name %>님 프로필 정보</h1>
    <form name="edit-profile">
      <input
        type="text"
        id="userid"
        value="<%= data.userid %>"
        readonly
      /><br />
      <input type="text" id="name" value="<%= data.name %>" /><br />
      <input type="password" id="pw" value="<%= data.pw %>" /><br />
      <input type="hidden" id="id" value="<%= data.id %>" />
      <button type="button" onclick="edit()">수정</button>
      <button type="button" onclick="destory()">회원 탈퇴</button>
    </form>

    <script>
      function edit() {
        const form = document.forms["edit-profile"];
        axios({
          method: "PATCH",
          url: "/profile/edit",
          data: {
            id: Number(form.id.value),
            userid: form.userid.value,
            name: form.name.value,
            pw: form.pw.value,
          },
        }).then((res) => {
          if (res.data.result) {
            document.location.reload();
          }
        });
      }
      //회원탈퇴
      function destory() {
        if (!confirm("회원탈퇴 하시겠습니까?")) {
          return;
        }
        axios({
          method: "DELETE",
          url: "/destory",
          data: {
            id: Number(document.querySelector("#id").value),
          },
        }).then((res) => {
          if (res.data.result) {
            alert("회원탈퇴 완료되었습니다.");
            document.location.href = "/";
          }
        });
      }
    </script>
  </body>
</html>
